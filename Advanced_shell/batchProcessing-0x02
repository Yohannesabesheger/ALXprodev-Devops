#!/bin/bash

# Create the output directory if it doesn't exist
mkdir -p pokemon_data

# List of Pokémon
pokemons=(bulbasaur ivysaur venusaur charmander charmeleon)

# Loop through each Pokémon
for name in "${pokemons[@]}"
do
  echo "Fetching data for $name..."
  
  # Fetch data and save to file
  curl -s "https://pokeapi.co/api/v2/pokemon/$name" -o "pokemon_data/${name}.json"

  # Check if the fetch was successful
  if [ $? -eq 0 ] && [ -s "pokemon_data/${name}.json" ]; then
    echo "Saved data to pokemon_data/${name}.json ✅"
  else
    echo "❌ Failed to fetch or save data for $name" >&2
  fi

  # Sleep to avoid rate-limiting
  sleep 2
done
